@using A4U3.Web.ViewComponents

@model Property

@using System.Threading.Tasks
@using A4U3.Web.Helpers

@{
    ViewBag.Title = "Delete";
}

<h2>Delete Property</h2>

<h3 class="important">Are you sure you want to delete this property?</h3>

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    <div>
       <input type="submit" value="Delete" class="btn btn-danger" /> 
        <br />
        <br />
       <p class="navigation"> @Html.ActionLink("Back to List", "List")</p>
    </div>
}

@{

    @await Component.InvokeAsync("PropertyPublic", new PropertyPublicParams { PropertyId = Model.PropertyId })

}
